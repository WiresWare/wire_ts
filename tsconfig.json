{
  "outDir": "dist",
  "declaration": true,
  "useDefineForClassFields": true,
  "types": [
    "chrome",
    "node"
  ],
  "emitDeclarationOnly": true,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@": ["./src"]
    },
    "allowJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": false,
  },
  "exclude": [
    "node_modules",
    "examples",
    "dist"
  ],
  "include": ["src", "test"]
}
