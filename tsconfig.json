{
  "outDir": "dist",
  "types": [
    "chrome",
    "node"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@": ["./src"]
    },
    "allowJs": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": false,
  },
  "exclude": [
    "node_modules",
    "examples",
    "dist"
  ],
  "include": ["src"]
}
