{
  "name": "todo-commands",
  "version": "1.0.0",
  "description": "Example of using Wire J(T)S library on TodoMVC",
  "main": "src/main.ts",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "@vitest/ui": "^0.24.5",
    "@wire/core": "file:./../../../wire_ts",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "typescript": "^4.6.4",
    "vite": "^3.2.0",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^0.24.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es2021": true,
      "browser": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": [
        "./tsconfig.json"
      ]
    },
    "settings": {
      "import/resolver": {
        "alias": {
          "map": [["@", "src"]],
          "extensions": [".js", ".jsx", ".ts", ".tsx"]
        },
        "node": {
          "paths": ["src"],
          "extensions": [".js", ".jsx", ".ts", ".tsx"]
        }
      }
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "import",
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "printWidth": 120,
          "singleQuote": true,
          "singleAttributePerLine": true,
          "trailingComma": "all",
          "bracketSpacing": true,
          "arrowParens": "always"
        }
      ],
      "@typescript-eslint/no-non-null-assertion": 0,
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-explicit-any": 0
    }
  }
}
